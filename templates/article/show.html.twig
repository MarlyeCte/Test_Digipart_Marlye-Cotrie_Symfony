{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <article class="pageAll">
        <h1>Article</h1>
        
        <table class="viewAll">
            <tbody>
                <tr>
                    <th>IdProduct</th>
                    <td>{{ article.idProduct }}</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ article.reference }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ article.description }}</td>
                </tr>
                <tr>
                    <th>PriceTaxIncl</th>
                    <td>{{ article.priceTaxIncl }}</td>
                </tr>
                <tr>
                    <th>PriceTaxExcl</th>
                    <td>{{ article.priceTaxExcl }}</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <td>{{ article.quantity }}</td>
                </tr>
            </tbody>
        </table>
        
        <article class="boxLink">
            <a class="btnLink" href="{{ path('article_index') }}">Revenir Ã  la liste</a>
            
            <a class="btnLink" href="{{ path('article_edit', {'idProduct': article.idProduct}) }}">Modifier</a>
